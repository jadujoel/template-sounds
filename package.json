{
  "name": "template-sounds",
  "scripts": {
    "clean": "rm -rf dist .ecas-encoder",
    "serve": "node info.js && serve dist --cors",
    "dev": "npm run watch & npm run serve",
    "codespace": "npm config set //npm.pkg.github.com/:_authToken $NPM_PKG_GITHUB_COM && npm config set @netent-tech:registry https://npm.pkg.github.com && npm install && npm run watch",
    "codespace:proxy": "gh codespace ports visibility 3000:public -c $CODESPACE_NAME",
    "build": "ecas-encoder --config=config/index.ts --outfile=dist/config.json --writeSoundsDataFile=false",
    "watch": "ecas-encoder --config=config/index.ts --outfile=dist/config.json --watch=config,sounds,dist/main --writeSoundsDataFile=false"
  },
  "devDependencies": {
    "@netent-tech/ecas-encoder": "2.1.4-alpha.5",
    "@netent-tech/ecas-engine": "2.1.4-alpha.5",
    "serve": "14.2.0",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@types/serve-handler": "^6.1.1",
    "serve-handler": "^6.1.5"
  }
}
